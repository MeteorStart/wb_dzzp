<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.qiyang.wb_dzzp.viewmodel.MainModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#102646"
        tools:context=".ui.MainActivity2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <RelativeLayout
                android:id="@+id/rely"
                android:layout_width="match_parent"
                android:layout_height="580dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="@dimen/dp_10">

                <com.qiyang.wb_dzzp.view.CustomerVideoView
                    android:id="@+id/video"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:visibility="gone" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_blue2"
                    android:gravity="center"
                    android:text="便民公告："
                    android:textColor="@color/white"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/tv_notice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_notice"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:marqueeRepeatLimit="-1"
                    android:singleLine="true"
                    android:text="公告：因道路施工123路临时改线！"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_blue3"
                    android:gravity="center"
                    android:padding="30dp">

                    <RelativeLayout
                        android:id="@+id/lay_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextClock
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:format12Hour="hh:mm"
                            android:format24Hour="HH:mm"
                            android:textColor="@color/white"
                            android:textSize="60dp"
                            tools:text="22:22" />

                        <TextClock
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_time"
                            android:format12Hour="MM月dd日 EEEE"
                            android:format24Hour="MM月dd日 EEEE"
                            android:textColor="@color/gray"
                            android:textSize="30dp"
                            tools:text="2022 8月12日 " />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/lay_time"
                        android:layout_alignBottom="@+id/lay_time"
                        android:layout_marginLeft="50dp"
                        android:layout_toRightOf="@+id/lay_time"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imv_weather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="@dimen/dp_10"
                            android:minWidth="60dp"
                            android:minHeight="60dp"
                            android:src="@{model.icon}"
                            tools:background="@mipmap/icon_qing" />

                        <TextView
                            android:id="@+id/tv_weather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="@{model.weather}"
                            android:textColor="@color/gray"
                            android:textSize="30dp"
                            tools:text="晴" />

                        <TextView
                            android:id="@+id/tv_weather_temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imv_weather"
                            android:layout_alignParentBottom="true"
                            android:layout_toRightOf="@+id/tv_weather"
                            android:text="@{model.temperature}"
                            android:textColor="@color/white"
                            android:textSize="30dp"
                            android:visibility="gone"
                            tools:text="32°" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_blue3"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="30dp">

                    <com.qiyang.wb_dzzp.view.autoTextView.AutofitTextView
                        android:id="@+id/tv_station_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="@{model.stationName}"
                        android:textColor="@color/white"
                        android:textSize="60dp"
                        tools:text="樟树市政府" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_station_name"
                        android:text="当前站点"
                        android:textColor="@color/gray"
                        android:textSize="30dp" />

                </RelativeLayout>


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recy_main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="@+id/rely"
                app:layout_constraintLeft_toRightOf="@+id/rely"
                app:layout_constraintTop_toTopOf="@+id/rely"
                tools:listitem="@layout/item_bus3" />

            <RelativeLayout
                android:id="@+id/rely_bottom"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="-25dp"
                android:layout_marginRight="-25dp"
                android:background="@drawable/bg_bottom">

                <TextView
                    android:id="@+id/tv_sim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:text="3301000001"
                    android:textColor="@color/gray"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:text="v1.0.0"
                    android:textColor="@color/gray"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/tv_welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:layout_toLeftOf="@+id/tv_version"
                    android:text="欢迎使用智能公交"
                    android:textColor="@color/gray"
                    android:textSize="26dp" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple_700"
            android:gravity="center"
            android:padding="60dp"
            android:textColor="@color/white"
            android:textSize="120dp"
            android:visibility="gone"
            tools:text="错误信息" />

    </RelativeLayout>
</layout>