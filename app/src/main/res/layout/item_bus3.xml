<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="#102646"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="190dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_4"
        android:background="@drawable/bg_item"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <com.qiyang.wb_dzzp.view.autoTextView.AutofitTextView
            android:id="@+id/tv_bus_name"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/bg_blue3"
            android:gravity="center"
            android:maxLines="1"
            android:padding="@dimen/dp_10"
            android:textColor="@color/white"
            android:textSize="50dp"
            tools:text="328路" />

        <TextView
            android:id="@+id/tv_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="-10dp"
            android:layout_marginRight="@dimen/dp_10"
            android:maxLines="2"
            android:padding="@dimen/dp_10"
            android:text="6站"
            android:textColor="@color/black"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="20dp"
            tools:text="即将到站" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lay_station_detail"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_blue4"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_station_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="京九汽车站" />

            <ImageView
                android:id="@+id/imv_right"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@mipmap/icon_right" />

            <TextView
                android:id="@+id/tv_station_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                tools:text="千禧花园" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                tools:text="票价：1.0元" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tv_service_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="运营时间：8:00 —— 18:00" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recy_station"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:layout_gravity="center"
            android:layout_marginTop="-10dp"
            android:background="@drawable/bg_item"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            tools:listitem="@layout/item_bus3_item" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_now"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_orange"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开往"
            android:textColor="@color/blackfont"
            android:textSize="28dp" />

        <com.qiyang.wb_dzzp.view.autoTextView.AutofitTextView
            android:id="@+id/tv_end_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="武林广场西"
            android:textColor="@color/blackfont"
            android:textSize="32dp" />
    </LinearLayout>

</LinearLayout>